<h1> <%= user_signed_in? ? "Dear, " + current_user.email + ", welcome to the list of secrets" : "sign in or gtfo" %> </h2>
<% if user_signed_in? %>
  <% @posts.each do |post| %>
    <h2><%= post.title %></h2>
    <p><%= post.body %></p>
  <% end %>
  <%= button_to("Create Post", new_post_path, method: :get) %> <br>
  <%= button_to("Log Out", destroy_user_session_path, method: :delete) %>
<% else %>
  <%= link_to "Sign In", new_user_session_path %>
<% end %>
